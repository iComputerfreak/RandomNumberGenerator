        font-family: Roboto;
        src: url("fonts/Roboto/Roboto-Light.ttf");
    }
    
    .container {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        justify-content: center;
        align-items: center;
        height: 100%;
    }
    
    .result {
        font-size: 144pt;
        color: chocolate;
        font-weight: bold;
    }

    .settings {
        font-size: 10pt;
        color: grey;
        font-weight: lighter;
    }

    body {
        background-color: bisque;
        height: 100%;
        margin: 0;
        font-family: Roboto, serif;
    }
    
